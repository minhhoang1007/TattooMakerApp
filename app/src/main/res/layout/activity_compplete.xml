<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black80"
    tools:context=".ui.detail.ComppleteActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/btnBackComplete"
                android:src="@drawable/ic_back_ios"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <TextView
                android:text="Complete"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/btnHome"
                android:src="@drawable/ic_home"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txtSave"
                    android:layout_margin="15dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
                <ImageView
                    android:id="@+id/imgComplete"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="20dp" />
                <LinearLayout
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <ImageView
                        android:layout_marginRight="30dp"
                        android:padding="12dp"
                        android:background="@drawable/custom_share"
                        android:id="@+id/btnShareComplete"
                        android:src="@drawable/ic_share_white"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                    <ImageView
                        android:background="@drawable/custom_share"
                        android:id="@+id/btnMoreComplete"
                        android:padding="8dp"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/ic_more"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>

                </LinearLayout>
                <FrameLayout
                    android:id="@+id/frameAdsComplete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>